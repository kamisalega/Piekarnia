@model ShoppingCartViewModel

<h2>Twój Koszyk</h2>
<h4>Oto pyszne ciasta w koszyku.</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Wybrana ilość</th>
            <th>Ciasto</th>
            <th class="text-right">Cena</th>
            <th class="text-right">Razem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@line.Amount</td>
                <td class="text-left">@line.Pie.Name</td>
                <td class="text-right">@line.Pie.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Amount * line.Pie.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Razem:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Zamów!</a>
</div>

