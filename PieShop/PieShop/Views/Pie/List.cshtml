@model PieShop.ViewModels.PiesListViewModel

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Piekarnia Kamila</title>
</head>
<body>
<h1>@ViewBag.CurrentCategory</h1>
@foreach (var pie in Model.Pies)
{
    <div>
        <h2>@pie.Name</h2>
        <h2>@pie.Price.ToString("c")</h2>
        <h2>@pie.Category.CategoryName</h2>
    </div>
}
</body>
</html>